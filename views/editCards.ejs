<!-- HTML-formulier -->
<%- include("header.ejs") %>
<main>
    <section class="edit-card">
        <h1>Edit Character</h1>
        <form action="/characters/<%= character.id %>/edit" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= character.name %>">
            
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="<%= character.age %>">

            <label for="available">Available:</label>
            <select id="available" name="available">
                <option value="true" <% if (character.available) { %>selected<% } %>>Yes</option>
                <option value="false" <% if (!character.available) { %>selected<% } %>>No</option>
            </select>

            <label for="birthdate">Birth Date:</label>
            <input type="date" id="birthdate" name="birthdate" value="<%= character.birthdate %>">

            <label for="role">Role:</label>
            <select id="role" name="role">
                <option value="Duelist" <% if (character.role === 'Duelist') { %>selected<% } %>>Duelist</option>
                <option value="Initiator" <% if (character.role === 'Initiator') { %>selected<% } %>>Initiator</option>
                <option value="Controller" <% if (character.role === 'Controller') { %>selected<% } %>>Controller</option>
                <option value="Sentinel" <% if (character.role === 'Sentinel') { %>selected<% } %>>Sentinel</option>
            </select>
            <button type="submit">Save</button>
        </form>
    </section>
</main>
<%- include("footer.ejs") %>
